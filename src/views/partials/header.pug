header
  a(href="/").header__logo
    img(src="/uploads/main_icn.png", alt="")
    span  모여봐요 동물의 숲
  nav 
    ul
      li 
        a(href="/search")
          i.fas.fa-search
      if loggedIn
        li 
          a(href="/videos/upload") Upload Video
        li
          a(href="/users/edit") Edit Profile
        li 
          a(href="/users/logout") Log Out
        li 
          a(href=`/users/${loggedInUser._id}`)
            if loggedInUser.avatarUrl === undefined
              span 😀
            else 
              if loggedInUser.socialOnly.toString().includes("github")
                img.header__avatar(src=loggedInUser.avatarUrl)
              else 
                if isHreoku
                  img.header__avatar(src=loggedInUser.avatarUrl)
                else
                  img.header__avatar(src= "/" + loggedInUser.avatarUrl)
      else 
        li 
          a(href="/login") Login
        li 
          a(href="/join").header__btn Join